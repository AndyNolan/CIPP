{
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "azureAD": {
          "registration": {
            "clientIdSettingName": "AZURE_CLIENT_ID",         
            "clientCredentialSettingName": "AZURE_CLIENT_SECRET",
            "openIdConnectConfiguration": "https://login.microsoftonline.com/96b5b2b3-dd98-499e-b83c-1402305fb7d9/v2.0/.well-known/openid-configuration"
          },
          "login": {
            "scopes": ["openid", "profile", "email"],
            "nameClaimType": "name"
          }
        }
      }
    }
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["admin", "editor", "reader"]
    }
  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": [
      "_next/static/*",
      "/css/*",
      "public/*",
      "assets/*",
      "favicon.ico",
      "robots.txt",
      "sitemap.xml",
      "manifest.json"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302,
      "exclude": ["/assets/illustrations/*.{png,jpg,gif}", "/css/*"]
    },
    "403": {
      "rewrite": "/403"
    },
    "404": {
      "rewrite": "/404"
    }
  },

  "globalHeaders": {
    "content-security-policy": "default-src https: blob: 'unsafe-eval' 'unsafe-inline'; object-src 'self' blob:; img-src 'self' blob: data: *"
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}
